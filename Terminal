red=$(tput setaf 1)                       # See man terminfo for the capnames and colours
green=$(tput setaf 2)
yellow=$(tput setaf 3)
blue=$(tput setaf 4)
magenta=$(tput setaf 5)
cyan=$(tput setaf 6)
white=$(tput setaf 7)
attriboff=$(tput sgr0)
echo "${red}Here we go${attriboff}"

bold=$(tput smso)
boldoff=$(tput rmso)
echo "${bold}Type your name:${boldoff} "

sudo -s                                   # Root shell

