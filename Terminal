red=$(tput setaf 1)                       # See man terminfo for the capnames and colours
attriboff=$(tput sgr0)
echo "${red}Here we go${attriboff}"

bold=$(tput smso)
boldoff=$(tput rmso)
echo "${bold}Type your name:${boldoff} "

tmux
tmux list-sessions
tmux attach -t0

tmux new -s douglas
tmux attach -t douglas

sudo -s                                   # Root shell

